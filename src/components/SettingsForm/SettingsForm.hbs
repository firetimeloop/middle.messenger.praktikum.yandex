<form class="user-form">
    {{#if avatar}}
    <div
        class="user-form__avatar-upload {{ avatarDisabled }}"
        style="background: url('https://ya-praktikum.tech/api/v2/resources{{ avatar }}'); background-size: cover"
    >
    {{else}}
    <div
        class="user-form__avatar-upload {{ avatarDisabled }}"
    >
    {{/if}}
        <label for="avatar" class="user-form__avatar {{ avatarDisabled }}">
                {{#if avatar}}
                {{else}}
                    <p class="user-form__avatar-background">&#128444;</p>
                {{/if}}
            <p class="user-form__avatar-tooltip">Поменять аватар</p>
        </label>
        <input class="user-form__avatar-input" id="avatar" name="avatar" type="file" {{ avatarDisabled }}/>
    </div>
    <h1 class="user-form__title">{{ title }}</h1>
    {{{ formFields }}}
    {{{ button }}}
    {{{ links }}}
</form>
